{% extends '.template.html.twig' %}

{% block breadcrumbs %}
    {% embed 'widgets/breadcrumb.html.twig' %}
        {% block title %}
            <a href="{{ page.url }}">{{ page.title }}</a>
            {% if page.shortDescription %}<small> / {{ page.shortDescription }}</small>{% endif %}
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block content %}
    {{ content|raw }}
{% endblock %}