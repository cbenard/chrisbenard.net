<article class="blog-post" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">
    <div class="row">
        <div class="span1 hidden-phone">
            <div class="post-meta-month">{{ post.date|date('M') }}</div>
            <div class="post-meta-day">{{ post.date|date('d') }}</div>
            <div class="post-meta-year">{{ post.date|date('Y') }}</div>
        </div>
        <div class="span8">
            <h2 class="post-title"><a href="{{ post.url }}">{{ post.title }}</a></h2>
            <h5 class="post-meta-postdate visible-phone">Posted: {{ post.date|date('M') }} {{ post.date|date('d') }}, {{ post.date|date('Y') }}</h5>
            <ul class="post-meta">
                {% if post.category %}
                    <li><i class="icon-list-alt"></i> <a href="{{ pccaturl(post.category) }}">{{ post.category }}</a></li>
                {% endif %}

                {% if post.tags %}
                    <li><i class="icon-tag"></i>
                        {% for tag in post.tags %}
                         <a href="{{ pctagurl(tag) }}">{{ tag }}</a>{% if not loop.last %}, {% endif %}
                        {% endfor %}
                    </li>
                {% endif %}
            </ul>
            <div class="post-content">
                {{ post.content|raw }}

                {% if post.has_more %}
                    <p><a href="{{ post.url }}" class="btn btn-large btn-inverse"><i class="icon-chevron-right"></i>Continue reading</a></p>
                {% endif %}
            </div>
        </div>
    </div>
</article>
