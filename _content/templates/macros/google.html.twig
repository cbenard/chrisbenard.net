{% macro webfonts(fontnames) %}
<link type="text/css" rel="stylesheet" href="//fonts.googleapis.com/css?family={{ fontnames }}" />
{% endmacro %}

{% macro analytics(siteId) %}
<script>
    if (!$.cookie('analytics_disabled')) {
        var _gaq = _gaq || [];
        var pluginUrl = '//www.google-analytics.com/plugins/ga/inpage_linkid.js';
        _gaq.push(['_require', 'inpage_linkid', pluginUrl]);
        _gaq.push(['_setAccount', '{{ siteId }}']);
        _gaq.push(['_setDomainName', 'chrisbenard.net']);
        _gaq.push(['_trackPageview']);
        (function() {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
    }
</script>
{% endmacro %}
