{% set isBlog = 'true' %}

{% extends '.template.html.twig' %}

{% block breadcrumbs %}
    {% embed 'widgets/breadcrumb.html.twig' %}
        {% block title %}<a href="{{ page.url }}">{{ page.title }}</a>{% endblock %}
        {% block subText %}
            <ul class="post-meta">
                <li><i class="icon-calendar"></i>{{ page.date }}</li>
                {% if page.category %}
                    <li><i class="icon-list-alt"></i> <a href="{{ pccaturl(page.category) }}">{{ page.category }}</a></li>
                {% endif %}

                {% if page.tags %}
                    <li><i class="icon-tag"></i>
                        {% for tag in page.tags %}
                            <a href="{{ pctagurl(tag) }}">{{ tag }}</a>{% if not loop.last %}, {% endif %}
                        {% endfor %}
                    </li>
                {% endif %}
            </ul>
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block content %}

    <div class="row">
        <section id="page-sidebar" class="pull-left span8">

            <article class="blog-post" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">
                <div class="row">
                    <div class="span9">
                        <div class="post-content">
                            {{ content|raw }}
                        </div>
                    </div>
                </div>
            </article>

            <div class="clear"></div>

            <div id="disqus_thread"></div>

        </section>

        {% block sidebar %}
            {% include 'sidebar.html.twig' %}
        {% endblock %}
    </div>

{% endblock %}

{% block javascriptBottom %}
    {{ parent() }}
    <script type="text/javascript">
        /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
        var disqus_shortname = 'cbenard'; // required: replace example with your forum shortname

        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
    </script>
    <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
    <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>
{% endblock %}
